//Nueva Vercion
f_imprenta ='Pathway Gothic One', sans-serif;
f_cusrsiva = 'Great Vibes', cursive;

color1 = #F7727A
color2 = #2dbab2

a
	color #111
	text-decoration none
	&:hover
		color #111
.contenedor
	width 1200px
	margin 0 auto
.menu
	font-family f_imprenta
	text-transform uppercase
	&.navegador
		font-size 1.1em
.main_menu
	.menu.enlinea
		a
			padding 25px 20px 10px
.logo
	font-family f_cusrsiva
	a:hover
		text-decoration none
//Estructuras
.head_main
	border-bottom 1px solid #f4f4f4
	border-top 1px solid #f4f4f4
	.row
		width 900px
		margin 0 auto
.head_top
	.menu.enlinea
		li
			a
				padding 5px 10px
				border-right 1px solid #f4f4f4
.menu
	li
		list-style none
	&.enlinea
		margin 0
		padding 0
		li
			display inline-block
			a
				display inline-block
				padding 3px 5px
.main-bottom
	background #fafafa
	text-align center
	padding 3em 0 4em
	.newsletter
		text-transform uppercase
		font-family f_imprenta
		.borde-newsletter
			width 300px
			margin 0 auto
			border 3px solid #333
			background #fff
			.caja_text
				display inline-block
				width 250px
				font-size 1.2em
			input
				border none
				outline none
				width 90%
			.iconos-newsletter
				display inline-block
				width 40px
				padding 5px 
				border-left 3px solid #333
.productos
	.producto
		text-align center
		img
			width 100%
		.nombre_producto
			font-family f_imprenta
			font-size 1.1em
			.estilo
				font-weight bold
				text-transform uppercase
		.precios
			font-family f_imprenta
			font-size 1.4em
			.en_oferta
				color #F7727A
			.old_precio
				font-size 0.8em
				margin 0 10px
#producto_single
	margin-top 20px
	h1.titulo
		font-family f_imprenta
	img
		width 100%
	label
		text-transform uppercase
		font-family f_imprenta
		letter-spacing 1px
	.text-uppercase
		font-family f_imprenta
	.colores
		a
			display inline-block
			width 100px
	.formulario_producto
		width 300px
		margin 10px auto
		text-align center
		button
			width 100%
			margin 10px 0
	.titulo
		margin 5px 0
	.precios_single
		font-family f_imprenta
		.precio
			font-size 1.5em		
			margin 0 10px
		.variacion
			display none
	#producto_galeria
		padding-top 5px
	#producto_video
		padding-top 5px
		text-align center
		display none
	.reviews
		margin 3px 0
		.estrellas
			float left
			margin 0 15px 0 0
		.escribe
			cursor pointer
			text-transform uppercase
			font-family f_imprenta
	.seccion_producto
		border-top 1px solid #f4f4f4
		padding 5px 0
	.categoria
		border-left 1px solid #f4f4f4
		border-right 1px solid #f4f4f4
		padding 0 15px
	.estilo
		padding 0 15px
	.seccion_2_producto
		padding-top 2em
		padding-bottom 2em
		margin-top 2em
	h3.subtitulo
		font-family f_imprenta
		text-decoration underline
		font-style normal
		font-size 1.8em
	h4.subtitulo
		font-size 1.1em
		text-align center		
//footer
footer
	background #111
	color #fff
	padding-top 4em
	a
		color #fff
	.block_footer
		h3.menu_titulo
			font-family f_imprenta
			text-transform uppercase
			font-size 1.35em
			padding 5px 0px
			border-bottom 1px solid #333
		.menu
			text-transform capitalize
			padding 0
			li
				margin 5px 0
				a:hover
					color #fff
					text-decoration underline
					
#slider_home
	.owl-item
		background #fff
		.slide
			opacity 0.5
	.center
		.slide
			opacity 1
#navegador
	transition-property top, box-shadow
	transition-duration: 1s
	transition-timing-function : linear
	&.menu-fijo
		box-shadow 0px 0px 8px 0px rgba(0,0,0,0.4)
		position fixed
		top 0
		width 100%
		background #fff
		z-index 2