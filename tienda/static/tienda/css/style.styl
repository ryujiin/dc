f_imprenta ='Pathway Gothic One', sans-serif;
f_cusrsiva = 'Great Vibes', cursive;


rojito = #F7727A
aguamarina = #60CCC4

body
	a
		color #111
		text-decoration none
		&:hover
			text-decoration underline
			color #111
		&:visited,&:link,&:active
			color #111
	.enlinea
		display inline-block
	.invisible
		display none
	.text_imprenta
		font-family f_imprenta
		text-transform uppercase
	.visible
		display block!important
	
#breadcrumb
	background-color #fff
	text-transform uppercase
.btn
	&.btn_cuadrado
		border-radius 0
		
.cartel_flotante
	font-size 1.2em
	position absolute
	background-color #ECECEC
	border-top 3px solid #111
	box-shadow 0px 2px 4px rgba(0,0,0,0.5)
	display none
#catalogo
	margin-bottom 20px
	.refinamiento-nav
		margin 20px 0
		.btn
			width 100%
footer
	background #111
	color #fff
	padding-top 4em
	.block_footer
		h3.menu_titulo
			font-family f_imprenta
			text-transform uppercase
			font-size 1.35em
			padding 5px 0px
			border-bottom 1px solid #333
			cursor pointer
			position relative
			.icono-menu
				position absolute
				top 8px
				right 20px
		.menu
			display none
			text-transform capitalize
			padding 0
			li
				margin 5px 0
				a
					color #fff
					&:hover
						color #fff
						text-decoration underline
.head_top
	display none
.icono_loved
	position relative
	font-family f_imprenta
	top 5px
	right 10px
	.icono
		cursor pointer
		&:hover
			color aguamarina
		&.checkin
			color aguamarina
	.favoritos
		.cartelicono
			width 200px
			right 5px
.menu
	font-family f_imprenta
	text-transform uppercase
	padding 0
	margin 0
	li
		list-style none
.menu_movil
	font-family f_imprenta
	text-transform uppercase
	position absolute
	top 20px
	left 10px
	.btn
		padding 4px 8px
		&:hover,&:active
			background-color #fff
#mini_carro
	position absolute
	top 30px
	right 30px
	font-family f_imprenta
	a:hover
		text-decoration none
		opacity 0.8
	.total
		display none
	.icono
		font-size 1.5em
		color #333
	.numero
		position absolute
		top -10px
		right -20px
		color #fff
		display inline-block
		width 20px
		text-align center
		background-color #333
		border-radius 10px
.main-bottom
	background #fafafa
	text-align center
	padding 3em 0 4em
	.newsletter
		text-transform uppercase
		font-family f_imprenta
		.borde-newsletter
			width 300px
			margin 0 auto
			border 3px solid #333
			background #fff
			.caja_text
				display inline-block
				width 250px
				font-size 1.2em
			input
				border none
				outline none
				width 90%
			.iconos-newsletter
				display inline-block
				width 40px
				padding 5px 
				border-left 3px solid #333
#navegador
	position relative
	transition-property top, box-shadow
	transition-duration: 1s
	transition-timing-function : linear
	border-bottom 1px solid #f4f4f4
	&.menu-fijo
		box-shadow 0px 0px 8px 0px rgba(0,0,0,0.4)
		position fixed
		top 0
		width 100%
		background #fff
		z-index 2
	.logo
		font-family f_cusrsiva
		text-align center
		h1
			font-size 30px
		a
			&:hover,&:visited,&:link,&:active
				text-decoration none
			
	.main_menu
		display none
		.navegador
			text-align center
			li
				border-bottom 1px dotted #ddd
				a
					display inline-block
					width 100%
					padding 5px 25px

#producto_galeria_destok
	display none
#producto_galeria_movil
	.item
		img
			width 100%
.productos
	.producto
		position relative
		text-align center
		border 1px solid #fff
		&:hover
			border 1px solid #f4f4f4
			.estrellas
				opacity 1
			.nombre_producto
				text-decoration underline
		a:hover
			text-decoration none
		img
			width 100%
		.nombre_producto
			font-family f_imprenta
			.estilo
				text-transform uppercase
		.precios
			font-family f_imprenta
			.en_oferta
				color #F7727A
			.old_precio
				font-size 0.8em
				margin 0 10px
		.estrellas
			opacity 0
			margin 10px 0
#producto_single
	margin-top 20px
	.categoria
		border-left 1px solid #f4f4f4
		border-right 1px solid #f4f4f4
		padding 0 15px
	.colores
		a
			display inline-block
			width 100px
	.estilo
		padding 0 15px
	.formulario_producto
		width 300px
		margin 10px auto
		text-align center
		.addcart
			text-transform uppercase
			&:hover
				background-color #468847
				border-color #3d773e
				color #fff
		.talla_form
			position relative
			.texto_ayuda
				display none
				position: absolute;
				left: -110px;
				width: 100px;
				border: 3px solid #ddd;
				font-family: f_imprenta
				box-shadow: 0px 0px 8px rgba(0,0,0,0.5);						
		button
			width 100%
			margin 10px 0
	#galerias
		.nav
			li
				font-family f_imprenta
				.icono
					margin 0 10px
	h1.titulo
		font-family f_imprenta
	h3.subtitulo
		font-family f_imprenta
		text-decoration underline
		font-style normal
		font-size 1.8em
	h4.subtitulo
		font-size 1.1em
		text-align center
	img
		width 100%
	label
		text-transform uppercase
		font-family f_imprenta
		letter-spacing 1px
	.precios_single
		font-family f_imprenta
		.precio
			font-size 1.5em		
			margin 0 10px
		.variacion
			display none
	#producto_galeria
		padding-top 5px
	#producto_video
		padding-top 5px
		text-align center
		display none
	.text-uppercase
		font-family f_imprenta		
	.titulo
		margin 5px 0
	.reviews
		margin 3px 0
		.estrellas
			float left
			margin 0 15px 0 0
		.escribe
			cursor pointer
			text-transform uppercase
			font-family f_imprenta
		.estrellas,.puntuacion,.numero
			margin 0 5px
		.puntuacion
			font-weight bold
			text-decoration underline
	.seccion_producto
		border-top 1px solid #f4f4f4
		padding 5px 0
	
	.seccion_2_producto
		padding-top 2em
		padding-bottom 2em
		margin-top 2em
.refinamiento
	display none
.refinamiento-nav
	.btn
		border-color #111
		font-family f_imprenta
		text-transform uppercase
		&:hover
			background-color #fff
			opacity 0.7
			border-color #ddd
#slider_home
	margin 10px
	img
		width 100%
