#navegador_main
	overflow hidden
	border-bottom 1px solid #f4f4f4
	.logo
		font-family f_cusrsiva
		margin-right 30px
		.img_logo
			width 48px
			overflow hidden
			img
				width 120px
		h1
			margin 12px 2px
	.menu-main
		li
			a
				padding 10px 20px
