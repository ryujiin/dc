f_imprenta ='Pathway Gothic One', sans-serif;
f_cusrsiva = 'Great Vibes', cursive;


rojito = #F7727A
aguamarina = #60CCC4

body
	font-family: 'Josefin Sans', sans-serif;
	font-size 16px
	a
		color #111
		text-decoration none
		&:hover
			text-decoration underline
			color #111
		&:visited,&:link,&:active
			color #111
	.contenedor
		margin 0 auto		
		max-width 1100px
	.contraste_suave
		background-color #333
		color white
	.enlinea
		display inline-block
	img
		width 100%
	.left
		float left
	.right
		float right
	.font_imp
		font-family f_imprenta
		letter-spacing 1px
	.overflow
		overflow hidden
#bloque_top
	overflow hidden
	p
		margin 5px 0
footer
	background-color #111
	color white
	padding 30px 0 0 0
	a:link,a
		color white!important
	#bloques_footer
		.footer_menu_bottom
			.block_footer
				.menu_titulo
					font-family f_imprenta
#envoltura
	min-height 400px
#navegador_main
	overflow hidden
	border-bottom 1px solid #f4f4f4
	.logo
		font-family f_cusrsiva
		margin-right 30px
		.img_logo
			width 48px
			overflow hidden
			img
				width 120px
		h1
			margin 12px 2px
	.menu-main
		li
			a
				padding 10px 20px
				display inline-block
				text-transform uppercase
#navegador_top
	border-bottom 1px solid #f4f4f4
	overflow hidden

ul.menu
	list-style none
	padding 0
	margin 0
	font-family f_imprenta
	&.menu-enlinea
		li
			padding 7px 10px			
			display inline-block